@{
}
@model Clase5.Modelo1erParcial.Entidades.Mision

@{
    ViewData["Title"] = "Registrar Mision";
}

<h1>@ViewData["Title"]</h1>
<h2>Registrar Mision</h2>

<form asp-action="RegistrarMision" method="post">
    <div class="form-group">
        <label asp-for="NombreSuperheroe" class="control-label"></label>
        <input asp-for="NombreSuperheroe" class="form-control" />
        <span asp-validation-for="NombreSuperheroe" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CantVillanosDerrotados" class="control-label"></label>
        <input asp-for="CantVillanosDerrotados" class="form-control" />
        <span asp-validation-for="CantVillanosDerrotados" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HorasMision" class="control-label"></label>
        <input asp-for="HorasMision" class="form-control" />
        <span asp-validation-for="HorasMision" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Registrar Mision" class="btn btn-primary" />
    </div>
</form>