@using GestionF1.Data.Entidades
@model List<Piloto>

<h1>Pilotos de F1</h1>
<a class="btn btn-primary" href="/pilotos/AgregarPiloto">Agregar Nuevo Piloto</a>

<form method="get" action="/pilotos/index">
    @await Html.PartialAsync("_pvEscuderias")
    <input type="submit" class="btn btn-primary" value="Filtrar" />
</form>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Escuderia</th>
            <th>Operacion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var piloto in Model)
        {
            <tr>
                <td>@piloto.NombrePiloto</td>
                <td>@piloto.IdEscuderiaNavigation.NombreEscuderia</td>
                <td><a href="/pilotos/eliminarpiloto/@piloto.IdPiloto">Eliminar</a></td>
            </tr>
        }
    </tbody>

</table>
